<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CounterApp.MainPage"
             Title="Counter">
    <VerticalStackLayout>
        
        <Button Text="Dodaj licznik" 
                Clicked="AddCounterClicked"
                HorizontalOptions="Center" 
                Margin="10"/>

        
        <ScrollView>
            <VerticalStackLayout x:Name="CountersContainer"
                                 Padding="10"
                                 Spacing="10"/>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
